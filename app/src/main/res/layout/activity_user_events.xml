<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__solid_white"
    tools:context="com.mateuszl.reporterapp.view.UserEventsActivity">

    <RelativeLayout
        android:id="@+id/relative_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/send_event_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:id="@+id/events_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#F5F5F5"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_selector" />
    </RelativeLayout>

    <EditText
        android:id="@+id/send_event_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/send_event_btn"
        android:layout_toStartOf="@+id/send_event_btn"
        android:background="#EEEEEE"
        android:backgroundTint="#EEEEEE"
        android:ems="10"
        android:hint="@string/enter_text"
        android:inputType="text"
        android:maxLines="4"
        android:minHeight="45dp" />

    <ImageButton
        android:id="@+id/send_event_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/send_button"
        app:srcCompat="@android:drawable/ic_menu_send" />

</RelativeLayout>
